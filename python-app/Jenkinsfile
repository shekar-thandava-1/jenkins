pipeline {
    agent any

    tools {
        // The name 'Python-3.9' must match a Python installation
        // configured in Jenkins -> Global Tool Configuration.
        python 'Python-3.9'
    }

    environment {
        DOCKER_HUB_CREDENTIALS_ID = 'jen-dockerhub'
        DOCKER_HUB_REPO = 'shekthan5/shekthan5-python-app' // CHANGE THIS
    }

    stages {
        stage('Checkout') {
            steps {
                // Checkout the repository
                git branch: 'main', credentialsId: 'jen-doc-git', url: 'https://github.com/shekar-thandava-1/jenkins.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('python-app') {
                    bat 'python -m pip install -r requirements.txt'
                }
            }
        }

        stage('Test') {
            steps {
                dir('python-app') {// Placeholder for running tests
                    echo 'Running tests...'
                    bat 'python -m pytest'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('python-app') {
                    script {
                        def dockerImage = docker.build("${DOCKER_HUB_REPO}:latest")
                    }               
                }
            }
        }

        stage('Push Image to DockerHub') {
            steps {
                dir('python-app') {
                    script {
                        docker.withRegistry('https://registry.hub.docker.com', DOCKER_HUB_CREDENTIALS_ID) {
                            def dockerImage = docker.image("${DOCKER_HUB_REPO}:latest")
                            dockerImage.push()
                        }                   
                    }
                }
            }
        }

        stage('Deploy to Kubernetes'){
			steps {
				dir('python-app') {
					script{
						kubeconfig(caCertificate: '', credentialsId: 'rancher-d-kubernetes-id', serverUrl: 'https://127.0.0.1:6443') {
						bat 'kubectl apply -f deployment.yaml'
						}
					}
				}
	    	}
        }
    }

    post {
        success {
            echo 'Python App Pipeline: SUCCESS'
        }
        failure {
            echo 'Python App Pipeline: FAILED'
        }
    }
}
